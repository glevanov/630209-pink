      section.upload
        h2.visually-hidden Форма загрузки фотографии
        p.upload__tagline Затмите их всех! Выкладывайте все, что накопилось в телефоне!
        form.upload__form(action="https://echo.htmlacademy.ru" method="post")
          img.upload__preview(src="http://placehold.it/280x374" width="280" height="374" alt="Ваша фотография")
          div.upload__controls
            button.upload__control.upload__control--crop(type="button")
            button.upload__control.upload__control--fill(type="button")
            button.upload__control.upload__control--contrast(type="button")
          input.upload__slider(type="range")
          div.upload__buttons-wrap
            button.button.upload__button.upload__button--submit(type="submit") Запостить
            button.button.upload__button.upload__button--reset(type="reset") Отмена

    footer.footer
      img.footer__logo(src="http://placehold.it/147x40" width="147" height="40" alt="Пинк")

      ul.social
        li.social__item
          a.social__link(href="#")
            img.social__icon(src="http://placehold.it/19x14" width="19" height="14" alt="Twitter")
        li.social__item
          a.social__link(href="#")
            img.social__icon(src="http://placehold.it/9x18" width="9" height="18" alt="Facebook")
        li.social__item
          a.social__link(href="#")
            img.social__icon(src="http://placehold.it/15x13" width="15" height="13" alt="YouTube")

      div.copyright
        p.copyright__text Разработано
        a(href="https://htmlacademy.ru/intensive/adaptive" target="_blank")
          img.copyright__icon(src="http://placehold.it/27x34" width="27" height="34" alt="HTML Academy")
