      section.upload
        h2.visually-hidden Форма загрузки фотографии
        p.upload__tagline Затмите их всех! Выкладывайте все, что накопилось в телефоне!
        form.upload__form(action="https://echo.htmlacademy.ru" method="post")
          img.upload__preview(src="img/photo-road-mobile@1x.jpg" width="280" height="374" alt="Ваша фотография")
          div.upload__controls
            button.upload__control.upload__control--crop.upload__control--active(type="button")
            button.upload__control.upload__control--fill(type="button")
            button.upload__control.upload__control--contrast(type="button")
          input.upload__slider(type="range")
          div.upload__buttons-wrap
            button.button.button--submit(type="submit") Запостить
            button.button.button--reset(type="reset") Отмена

    footer.footer
      a(href="index.html")
        img.footer__logo(src="img/logo-pink-blue-mobile.svg" width="147" height="40" alt="Пинк")

      ul.social
        li.social__item
          a.social__link(href="#")
            img.social__icon(src="img/icon-twitter.svg" width="19" height="14" alt="Twitter")
        li.social__item
          a.social__link(href="#")
            img.social__icon(src="img/icon-facebook.svg" width="9" height="18" alt="Facebook")
        li.social__item
          a.social__link(href="#")
            img.social__icon(src="img/icon-youtube.svg" width="15" height="13" alt="YouTube")

      div.copyright
        p.copyright__text Разработано
        a(href="https://htmlacademy.ru/intensive/adaptive" target="_blank")
          img.copyright__icon(src="img/logo-htmlacademy.svg" width="27" height="34" alt="HTML Academy")
